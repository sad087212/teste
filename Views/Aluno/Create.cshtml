@model Aluno

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-controller="Aluno" asp-action="Store" method="post" class="p-4 border rounded shadow-sm bg-white">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    
    <div class="mb-3">
        <label for="nomeInput" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="nomeInput" readonly>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="telefoneInput" class="form-label">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" id="telefoneInput" readonly>
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="emailInput" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" id="emailInput" readonly>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="cursoSelect" class="form-label">Curso</label>
        <select class="form-select" asp-for="CursoId" id="cursoSelect" disabled>
            <option value="">Selecione um curso</option>
            @foreach (var curso in ViewBag.Cursos)
            {
                <option value="@curso.Id" selected="@curso.Id == Model.CursoId">@curso.Descricao</option>
            }
        </select>
        <input type="hidden" asp-for="CursoId" />
        <span asp-validation-for="CursoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="turmaSelect" class="form-label">Turma</label>
        <select class="form-select" asp-for="TurmaId" id="turmaSelect" required>
            <option value="">Selecione uma turma</option>
            @foreach (var turma in ViewBag.Turmas)
            {
                <option value="@turma.Id">@turma.Descricao</option>
            }
        </select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>


