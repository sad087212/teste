@model Lead

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4">Editar Lead</h2>
        <a href="/Leads" class="btn btn-secondary">Voltar</a>
    </div>
    <input type="hidden" name="OriginalEmail" value="@Model.Email" />

    <form asp-controller="Leads" asp-action="Update" method="post" class="p-4 border rounded shadow-sm bg-white">
        <!-- Exibe erros gerais -->
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <input type="hidden" asp-for="Id" /> <!-- Campo oculto para o ID -->

        <div class="mb-3">
            <label for="nomeInput" class="form-label">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" id="nomeInput" placeholder="Digite o nome completo">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="telefoneInput" class="form-label">Telefone</label>
            <input type="text" asp-for="Telefone" class="form-control" id="telefoneInput" placeholder="(99) 99999-9999">
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="EmailInput" class="form-label">Email</label>
            <input type="email" asp-for="Email" class="form-control" id="EmailInput" placeholder="exemplo@email.com">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="cursoSelect" class="form-label">Curso</label>
            <select class="form-select" id="cursoSelect" asp-for="CursoInteresse">
                <option value="">Selecione um curso</option>
                @foreach (var curso in ViewBag.Cursos)
                {
                    <option value="@curso.Descricao">@curso.Descricao</option>
                }
            </select>
            <span asp-validation-for="CursoInteresse" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>
