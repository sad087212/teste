@model Curso

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4">Editar Curso</h2>
        <a href="/Curso" class="btn btn-secondary">Voltar</a>
    </div>

    <form asp-controller="Curso" asp-action="Update" method="post" class="p-4 border rounded shadow-sm bg-white">
        <!-- Exibe erros gerais -->
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <input type="hidden" asp-for="Id" /> <!-- Campo oculto para o ID -->

        <div class="mb-3">
            <label for="nomeInput" class="form-label">Curso</label>
            <input type="text" asp-for="Descricao" class="form-control" id="nomeInput" placeholder="Digite o nome do curso">
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>
